<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	    <Button android:id="@+id/btn_simple_listview1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Simple Listview 1"/>
	            
	    <Button android:id="@+id/btn_collapsable_listview1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Collapsable Listview 1"/>	   
	            
		<Button android:id="@+id/btn_nested_listview1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nested Listview 1"/>	  

		<Button android:id="@+id/btn_nested_listview_adapter"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nested Listview Custom Adapter"/>	  
	            	            
	            
</LinearLayout>
